import unittest
import os
from challenge.y$year.d$day import part_one, part_two, test_results


class TestChallenge(unittest.TestCase):
    def test_part_one(self):
        dir = "./tests/testdata/y$year/$day/01"
        files = os.listdir(dir)
        for file in files:
            with open(f"{dir}/{file}", "r") as f:
                with self.subTest(f"Testing file {file}"):
                    self.assertEqual(part_one(f.read()), results["part_one"][file])

    def test_part_two(self):
        dir = "./tests/testdata/y$year/$day/02"
        files = os.listdir(dir)
        for file in files:
            with open(f"{dir}/{file}", "r") as f:
                with self.subTest(f"Testing file {file}"):
                    self.assertEqual(part_two(f.read()), results["part_two"][file])
